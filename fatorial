algoritmo "fatorial"
var
  Cont, Numero, Fatorial: inteiro
  Resposta: caractere
inicio
Repita
  Escreval("====CÁLCULO FATORIAL====")
  Escreva("Digite um número: ")
  Leia (Numero)
  Escreval("========================")
  Cont <- Numero
  Fatorial <- 1
  Repita
      Fatorial <- Fatorial * Cont
      Cont <- Cont - 1
  Ate (Cont < 1)
  Escreval(" O valor fatorial de", Numero, " é igual a:", Fatorial)
  Escreva("Quer continuar? [S/N]" )
  Leia (Resposta)
  LimpaTela
Ate (Resposta = "Numero")
fimalgoritmo

algoritmo "ParImpar"
var
   N: inteiro
   R: caractere
   
Funcao ParOuImpar(V: Inteiro): Caractere
inicio
   Se (V%2 = 0) entao
      Retorne "PAR"
   senao
      Retorne "IMPAR"
   FimSe
FimFuncao
inicio
   Escreva("Digite um número: ")
   Leia (N)
   R <- ParOuImpar(N)
   Escreva ("O numero ", N, " é um valor ", R)
fimalgoritmo

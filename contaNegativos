algoritmo "contaNegativos"
var
   N, C, TotN: Inteiro
inicio
      C <- 1
      TotN <- 0
      Repita
            Escreva("Digite um número: ")
            Leia (N)
            Se (N<0) entao
                 TotN <- TotN + 1
            FimSe
            C <- C + 1
      Ate (C > 3)
      Escreval("Fora(m) digitado(s)", TotN, " número(s) negativo(s)." )
fimalgoritmo

algoritmo "somador_numerico"
var
   contador, N, soma, maior: inteiro
inicio
   contador <- 1
   soma <- 0
   Enquanto (contador <= 5) faÃ§a
      Escreva("Digite o", contador, "o. valor: ")
      Leia (N)
      Se (N > maior) entao
         maior <- N
      FimSe
      Soma <- Soma + N
      contador <- contador + 1
   FimEnquanto
   Escreval (" ")
   Escreval ("A soma de todos os valores foi: ", Soma)
   Escreval ("e o maior valor digitado foi: ", maior)
fimalgoritmo
